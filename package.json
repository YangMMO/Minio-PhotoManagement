{
  "name": "minio_thumb",
  "version": "1.0.0",
  "description": "MinIO thumbnail manager built with Electron",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "keywords": [],
  "author": "MMO",
  "license": "MIT",
  "type": "commonjs",
  "devDependencies": {
    "electron": "^28.2.3",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "@electron/remote": "^2.1.3",
    "browser-image-compression": "^2.0.2",
    "minio": "^8.0.5",
    "remixicon": "^4.6.0",
    "sharp": "^0.34.3"
  },
  "build": {
    "appId": "com.mmo.minio_thumb",
    "productName": "Minio图片管理系统",
    "executableName": "Minio图片管理系统",
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "files": [
      "main.js",
      "minioClient.js",
      "config.json",
      "pages/**/*",
      "assets/**/*",
      "!node_modules/.cache",
      "!dist"
    ],
    "mac": {
      "icon": "assets/icon.icns",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        "nsis",
        "zip"
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
